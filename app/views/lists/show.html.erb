<%# 1. name of list %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1552168324-d612d77725e3?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=736&q=80);">
  <div class="container">
    <h1 class="row justify-content-center"> <%= @list.name %> </h1>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between align-items-center m-3">
    <%= link_to list_path(@list),
                method: :delete,
                class: 'btn btn-danger btn-xs',
                data: { confirm: 'Are you sure ?'} do %>
      <i class="fas fa-trash-alt"></i>
    <%end%>
    <%# 2. list of movies bookmarked %>
    <%= link_to 'Add Movie Bookmark', new_list_bookmark_path(@list), class: 'btn btn-success m-2'%>
    <%= link_to '<< Back', lists_path, class: 'btn btn-secondary m-2' %>
  </div>

  <div class="row justify-content-center px-2">
    <% @list.bookmarks.each do |bookmark|  %>
      <div class="card-product">
        <img src="<%= bookmark.movie.poster_url %>"/>
        <div class="card-product-infos">
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
          <p><%= bookmark.comment %></p>
          <p><%= bookmark.movie.rating %></p>
        </div>
      </div>
    <%end %>
    <%# 3. add a bookmark redirecting button %>
  </div>
</div>
